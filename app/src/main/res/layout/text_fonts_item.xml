<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_font_root"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/text_fonts_item_margin"
    android:layout_marginRight="@dimen/text_fonts_item_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_font"
        android:textSize="@dimen/add_text_bottom_text_size"
        android:textColor="@color/main_text_color"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>